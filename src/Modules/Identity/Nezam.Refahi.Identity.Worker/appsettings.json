  "ReservationSettings": {
    "ReservationHoldMinutes": 15,
    "MinimumHoursBeforeTour": 24,
    "DefaultTenantId": "default",
    "IdempotencyTtlMinutes": 30,
    "MaxReasonableAge": 120,
    "GracePeriodMinutes": 5,
    "CleanupIntervalMinutes": 10,
