@model Nezam.Refahi.Web.Models.TourListViewModel

@{
    ViewData["Title"] = "مدیریت تورها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
   

    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">کل تورها</p>
                        </div>
                        <div class="flex-shrink-0">
                            <h5 class="text-success fs-14 mb-0">
                                <i class="ri-arrow-right-up-line fs-13 align-middle"></i> +@Model.Statistics.TotalTours
                            </h5>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4">@Model.Statistics.TotalTours</h4>
                            <span class="badge bg-success-subtle text-success mb-0">
                                <i class="ri-arrow-up-line align-middle"></i> فعال
                            </span>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-success-subtle rounded fs-3">
                                <i class="ri-map-pin-line text-success"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">تورهای آینده</p>
                        </div>
                        <div class="flex-shrink-0">
                            <h5 class="text-info fs-14 mb-0">
                                <i class="ri-arrow-right-up-line fs-13 align-middle"></i> +@Model.Statistics.UpcomingTours
                            </h5>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4">@Model.Statistics.UpcomingTours</h4>
                            <span class="badge bg-info-subtle text-info mb-0">
                                <i class="ri-calendar-line align-middle"></i> برنامه‌ریزی شده
                            </span>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-info-subtle rounded fs-3">
                                <i class="ri-calendar-line text-info"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">ظرفیت خالی</p>
                        </div>
                        <div class="flex-shrink-0">
                            <h5 class="text-warning fs-14 mb-0">
                                <i class="ri-arrow-right-up-line fs-13 align-middle"></i> +@Model.Statistics.ToursWithAvailableSpots
                            </h5>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4">@Model.Statistics.ToursWithAvailableSpots</h4>
                            <span class="badge bg-warning-subtle text-warning mb-0">
                                <i class="ri-user-line align-middle"></i> در دسترس
                            </span>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-warning-subtle rounded fs-3">
                                <i class="ri-user-line text-warning"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1 overflow-hidden">
                            <p class="text-uppercase fw-medium text-muted text-truncate mb-0">ثبت‌نام باز</p>
                        </div>
                        <div class="flex-shrink-0">
                            <h5 class="text-primary fs-14 mb-0">
                                <i class="ri-arrow-right-up-line fs-13 align-middle"></i> +@Model.Statistics.ToursWithOpenRegistration
                            </h5>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-4">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-4">@Model.Statistics.ToursWithOpenRegistration</h4>
                            <span class="badge bg-primary-subtle text-primary mb-0">
                                <i class="ri-login-circle-line align-middle"></i> باز
                            </span>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-primary-subtle rounded fs-3">
                                <i class="ri-login-circle-line text-primary"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title mb-0">لیست تورها</h5>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="ri-add-line align-middle me-1"></i> افزودن تور
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Simple Filters -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="جستجو..." id="searchInput" value="@Model.Filter.SearchTerm">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">همه وضعیت‌ها</option>
                                <option value="Draft" selected="@(Model.Filter.Status?.ToString() == "Draft")">پیش‌نویس</option>
                                <option value="RegistrationOpen" selected="@(Model.Filter.Status?.ToString() == "RegistrationOpen")">ثبت‌نام باز</option>
                                <option value="InProgress" selected="@(Model.Filter.Status?.ToString() == "InProgress")">در حال اجرا</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-primary" onclick="applyFilters()">
                                <i class="ri-search-line me-1"></i> فیلتر
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                                <i class="ri-refresh-line me-1"></i> پاک کردن
                            </button>
                        </div>
                        <div class="col-md-2 text-end">
                            <a href="@Url.Action("Create")" class="btn btn-success">
                                <i class="ri-add-line me-1"></i> افزودن تور
                            </a>
                        </div>
                    </div>

                    <!-- Tours Table -->
                    @if (Model.Tours.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>عنوان</th>
                                        <th>تاریخ شروع</th>
                                        <th>مدت</th>
                                        <th>ظرفیت</th>
                                        <th>وضعیت</th>
                                        <th>قیمت</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tour in Model.Tours)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@tour.Title</strong>
                                                    <br>
                                                    <small class="text-muted">@(tour.Description.Length > 50 ? tour.Description.Substring(0, 50) + "..." : tour.Description)</small>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <i class="ri-calendar-line text-primary me-1"></i>
                                                    @tour.TourStart.ToString("yyyy/MM/dd")
                                                    <br>
                                                    <small class="text-muted">@tour.RemainingDays روز باقی‌مانده</small>
                                                </div>
                                            </td>
                                            <td>
                                                <i class="ri-time-line text-info me-1"></i>
                                                @tour.Duration
                                            </td>
                                            <td>
                                                <div>
                                                    <i class="ri-user-line text-success me-1"></i>
                                                    @tour.AvailableSpots / @tour.MaxParticipants
                                                    <br>
                                                    <div class="progress mt-1" style="height: 4px;">
                                                        @{
                                                            var occupancyPercentage = tour.MaxParticipants > 0 
                                                                ? (double)(tour.MaxParticipants - tour.AvailableSpots) / tour.MaxParticipants * 100 
                                                                : 0;
                                                        }
                                                        <div class="progress-bar @(occupancyPercentage > 80 ? "bg-danger" : occupancyPercentage > 60 ? "bg-warning" : "bg-success")" 
                                                             style="width: @occupancyPercentage%"></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-@tour.StatusBadgeColor">@tour.StatusDisplayName</span>
                                                @if (tour.IsRegistrationOpen)
                                                {
                                                    <br>
                                                    <span class="badge bg-success mt-1">ثبت‌نام باز</span>
                                                }
                                            </td>
                                            <td>
                                                <i class="ri-price-tag-3-line text-warning me-1"></i>
                                                @tour.PriceRange
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("Details", new { id = tour.Id })" 
                                                       class="btn btn-outline-primary" title="مشاهده">
                                                        <i class="ri-eye-line"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = tour.Id })" 
                                                       class="btn btn-outline-secondary" title="ویرایش">
                                                        <i class="ri-edit-line"></i>
                                                    </a>
                                                    <a href="@Url.Action("Manage", new { id = tour.Id })" 
                                                       class="btn btn-outline-info" title="مدیریت">
                                                        <i class="ri-settings-3-line"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-outline-danger" 
                                                            title="حذف"
                                                            onclick="deleteTour('@tour.Id', '@tour.Title')">
                                                        <i class="ri-delete-bin-line"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.Pagination.TotalPages > 1)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination justify-content-center">
                                            @if (Model.Pagination.HasPreviousPage)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage - 1 })">
                                                        <i class="ri-arrow-right-s-line"></i>
                                                    </a>
                                                </li>
                                            }

                                            @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); i++)
                                            {
                                                <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                                </li>
                                            }

                                            @if (Model.Pagination.HasNextPage)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.Pagination.CurrentPage + 1 })">
                                                        <i class="ri-arrow-left-s-line"></i>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-md mx-auto mb-4">
                                <div class="avatar-title bg-light text-primary rounded-circle fs-24">
                                    <i class="ri-map-pin-line"></i>
                                </div>
                            </div>
                            <h5>تور یافت نشد</h5>
                            <p class="text-muted">هیچ توری با فیلترهای انتخابی یافت نشد.</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="ri-add-line me-1"></i> افزودن اولین تور
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">تأیید حذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>آیا از حذف تور <strong id="tourTitle"></strong> اطمینان دارید؟</p>
                <p class="text-danger small">این عمل قابل بازگشت نیست.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">انصراف</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function applyFilters() {
            const url = new URL(window.location);
            const searchTerm = document.getElementById('searchInput').value;
            const status = document.getElementById('statusFilter').value;
            
            if (searchTerm) {
                url.searchParams.set('SearchTerm', searchTerm);
            } else {
                url.searchParams.delete('SearchTerm');
            }
            
            if (status) {
                url.searchParams.set('Status', status);
            } else {
                url.searchParams.delete('Status');
            }
            
            window.location.href = url.toString();
        }

        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('statusFilter').value = '';
            const url = new URL(window.location);
            url.searchParams.delete('SearchTerm');
            url.searchParams.delete('Status');
            url.searchParams.delete('IsActive');
            url.searchParams.delete('ShowOnlyAvailable');
            url.searchParams.delete('ShowOnlyRegistrationOpen');
            url.searchParams.delete('StartDateFrom');
            url.searchParams.delete('StartDateTo');
            url.searchParams.delete('MinPrice');
            url.searchParams.delete('MaxPrice');
            url.searchParams.delete('MinAge');
            url.searchParams.delete('MaxAge');
            url.searchParams.delete('SortBy');
            url.searchParams.delete('SortDescending');
            window.location.href = url.toString();
        }

        function deleteTour(tourId, tourTitle) {
            document.getElementById('tourTitle').textContent = tourTitle;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + tourId;
            
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

@section Styles {
    <style>
        .tour-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .tour-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .card-animate {
            transition: all 0.3s ease;
        }
        
        .progress {
            background-color: rgba(0, 0, 0, 0.1);
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .page-title-box {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
        }
        
        .page-title-box h4 {
            color: white;
            margin: 0;
        }
        
        .page-title-box .breadcrumb {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }
        
        .page-title-box .breadcrumb-item a {
            color: rgba(255, 255, 255, 0.8);
        }
        
        .page-title-box .breadcrumb-item.active {
            color: white;
        }
    </style>
}
