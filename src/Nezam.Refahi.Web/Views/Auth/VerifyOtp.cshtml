@model Nezam.Refahi.Web.Models.VerifyOtpViewModel
@{
    ViewData["Title"] = "تایید کد یکبار مصرف";
    Layout = "_AuthLayout";
}

<div class="authentication-wrapper">
    <div class="authentication-container">
        <div class="auth-card">
            <div class="auth-header text-center mb-4">
            
                <h3 class="auth-title mb-3">تایید کد یکبار مصرف</h3>
                <p class="auth-subtitle text-muted">
                    کد تایید به شماره <span class="fw-bold text-primary" dir="ltr">@Model.PhoneNumber</span> ارسال شد
                </p>
            </div>

            <form asp-action="VerifyOtp" asp-controller="Auth" method="post" id="verifyForm" class="auth-form">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PhoneNumber" />
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="Otp" id="otpInput" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="form-group mb-4">
                    <label class="form-label fw-semibold mb-3">
                        <i class="ri-lock-password-line me-1"></i>
                        کد تایید 5 رقمی
                    </label>
                    
                    <div class="otp-container" dir="ltr">
                        <div class="otp-input-group">
                            <input type="text" class="otp-input" maxlength="1" data-index="0" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" data-index="1" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" data-index="2" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" data-index="3" autocomplete="off">
                            <input type="text" class="otp-input" maxlength="1" data-index="4" autocomplete="off">
                        </div>
                        <span asp-validation-for="Otp" class="text-danger small mt-2 d-block"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <button class="btn btn-primary btn-lg w-100 auth-submit-btn" type="submit" id="submitBtn">
                        <i class="ri-login-circle-line me-2"></i>
                        ورود به سیستم
                    </button>
                </div>

                <div class="auth-info-section">
                    <div class="info-card mb-3">
                        <div class="info-header">
                            <i class="ri-key-line me-2"></i>
                            <span class="fw-semibold">کد تایید پیش‌فرض</span>
                        </div>
                        <p class="info-text">
                            کد تایید پیش‌فرض سیستم: <strong class="text-primary">12345</strong>
                        </p>
                    </div>

                    <div class="timer-card mb-3">
                        <div class="timer-header">
                            <i class="ri-time-line me-2"></i>
                            <span class="fw-semibold">زمان باقیمانده</span>
                        </div>
                        <div class="timer-content">
                            <div id="timer-container" class="mb-2">
                                <span class="timer-text">زمان باقیمانده تا درخواست مجدد:</span>
                                <span id="timer" class="timer-display">05:00</span>
                            </div>
                            <button type="button" 
                                    id="resendButton" 
                                    class="btn btn-outline-primary btn-sm resend-btn" 
                                    disabled>
                                <i class="ri-refresh-line me-1"></i>
                                ارسال مجدد کد
                            </button>
                        </div>
                    </div>

                    <div class="back-link text-center">
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-link text-muted p-0">
                            <i class="ri-arrow-right-line me-1"></i>
                            بازگشت به صفحه ورود
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function() {
            const phoneNumber = '@Model.PhoneNumber';
            let timerInterval;
            
            // OTP Input Handling
            const otpInputs = $('.otp-input');
            const hiddenOtpInput = $('#otpInput');
            
            // Handle OTP input
            otpInputs.on('input', function() {
                const currentInput = $(this);
                const currentIndex = parseInt(currentInput.data('index'));
                let value = currentInput.val().replace(/\D/g, '').substring(0, 1);
                
                currentInput.val(value);
                
                // Update hidden input
                updateHiddenOtp();
                
                // Move to next input if value entered
                if (value && currentIndex < 4) {
                    otpInputs.eq(currentIndex + 1).focus();
                }
                
                // Auto-submit if all digits entered
                if (getOtpValue().length === 5) {
                    setTimeout(() => {
                        $('#submitBtn').click();
                    }, 300);
                }
            });
            
            // Handle backspace
            otpInputs.on('keydown', function(e) {
                const currentInput = $(this);
                const currentIndex = parseInt(currentInput.data('index'));
                
                if (e.key === 'Backspace' && !currentInput.val() && currentIndex > 0) {
                    otpInputs.eq(currentIndex - 1).focus();
                }
            });
            
            // Handle paste
            otpInputs.first().on('paste', function(e) {
                e.preventDefault();
                const pastedData = (e.originalEvent.clipboardData || window.clipboardData).getData('text');
                const digits = pastedData.replace(/\D/g, '').substring(0, 5);
                
                if (digits.length === 5) {
                    otpInputs.each(function(index) {
                        $(this).val(digits[index]);
                    });
                    updateHiddenOtp();
                    
                    // Auto-submit after paste
                    setTimeout(() => {
                        $('#submitBtn').click();
                    }, 300);
                }
            });
            
            function updateHiddenOtp() {
                const otpValue = getOtpValue();
                hiddenOtpInput.val(otpValue);
            }
            
            function getOtpValue() {
                let otp = '';
                otpInputs.each(function() {
                    otp += $(this).val();
                });
                return otp;
            }
            
            // Focus first input on page load
            otpInputs.first().focus();

            // Timer functionality with session persistence
            function getTimerFromSession() {
                const sessionKey = `otp_timer_${phoneNumber}`;
                const storedTime = sessionStorage.getItem(sessionKey);
                if (storedTime) {
                    const sentTime = new Date(parseInt(storedTime));
                    const now = new Date();
                    const elapsedSeconds = Math.floor((now - sentTime) / 1000);
                    return Math.max(300 - elapsedSeconds, 0); // 300 seconds = 5 minutes
                }
                return 0;
            }

            function saveTimerToSession() {
                const sessionKey = `otp_timer_${phoneNumber}`;
                sessionStorage.setItem(sessionKey, Date.now().toString());
            }

            function clearTimerFromSession() {
                const sessionKey = `otp_timer_${phoneNumber}`;
                sessionStorage.removeItem(sessionKey);
            }

            function startTimer(duration) {
                let timer = duration;
                const display = $('#timer');
                const resendButton = $('#resendButton');
                const timerContainer = $('#timer-container');
                
                if (timerInterval) clearInterval(timerInterval);
                
                function updateButtonState() {
                    if (timer <= 0) {
                        resendButton.prop('disabled', false);
                        display.text('');
                        timerContainer.hide();
                        clearTimerFromSession();
                        if (timerInterval) clearInterval(timerInterval);
                        return;
                    }
                    resendButton.prop('disabled', true);
                    timerContainer.show();
                }
                
                function updateDisplay() {
                    const minutes = parseInt(timer / 60, 10);
                    const seconds = parseInt(timer % 60, 10);
                    
                    const displayText = minutes.toString().padStart(2, '0') + ':' + 
                                      seconds.toString().padStart(2, '0');
                    display.text(displayText);
                    
                    if (--timer < 0) {
                        updateButtonState();
                        return;
                    }
                }
                
                // Initial display
                updateDisplay();
                updateButtonState();
                
                timerInterval = setInterval(function() {
                    updateDisplay();
                    updateButtonState();
                }, 1000);
            }

            function initializeTimer() {
                const remainingSeconds = getTimerFromSession();
                
                if (remainingSeconds > 0) {
                    startTimer(remainingSeconds);
                } else {
                    // If no timer in session, check if we have OTP sent time from server
                    const serverOtpTime = '@(ViewData["OtpSentTime"])';
                    if (serverOtpTime) {
                        const sentTime = new Date(serverOtpTime);
                        const now = new Date();
                        const elapsedSeconds = Math.floor((now - sentTime) / 1000);
                        const remainingFromServer = Math.max(300 - elapsedSeconds, 0);
                        
                        if (remainingFromServer > 0) {
                            // Save to session and start timer
                            saveTimerToSession();
                            startTimer(remainingFromServer);
                        } else {
                            $('#resendButton').prop('disabled', false);
                            $('#timer').text('');
                            $('#timer-container').hide();
                        }
                    } else {
                        // If no server time available, start a fresh 5-minute timer
                        saveTimerToSession();
                        startTimer(300);
                    }
                }
            }

            // Handle resend button click
            $('#resendButton').on('click', function() {
                const button = $(this);
                button.prop('disabled', true);
                
                const originalHtml = button.html();
                button.html('<i class="ri-loader-4-line me-1 spin"></i> در حال ارسال...');
                
                $.ajax({
                    url: '/Auth/ResendOtp',
                    type: 'POST',
                    data: {
                        phoneNumber: phoneNumber,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            // Save timer to session and start countdown
                            saveTimerToSession();
                            startTimer(300);
                            toastr.success('کد تایید جدید ارسال شد');
                            
                            // Clear OTP inputs
                            otpInputs.val('');
                            updateHiddenOtp();
                            otpInputs.first().focus();
                        } else {
                            toastr.error(response.message || 'خطا در ارسال کد تایید');
                            button.prop('disabled', false);
                        }
                    },
                    error: function() {
                        toastr.error('خطا در ارسال درخواست');
                        button.prop('disabled', false);
                    },
                    complete: function() {
                        button.html(originalHtml);
                    }
                });
            });

            // Form submission enhancement
            $('#verifyForm').on('submit', function() {
                const submitBtn = $('#submitBtn');
                const originalText = submitBtn.html();
                
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="ri-loader-4-line me-2"></i>در حال بررسی...');
                
                setTimeout(function() {
                    submitBtn.prop('disabled', false);
                    submitBtn.html(originalText);
                }, 3000);
            });

            // Initialize timer on page load
            initializeTimer();

            // Handle page visibility change (when user switches tabs or minimizes)
            document.addEventListener('visibilitychange', function() {
                if (!document.hidden) {
                    // Page became visible again, recalculate timer
                    const remainingSeconds = getTimerFromSession();
                    if (remainingSeconds > 0) {
                        startTimer(remainingSeconds);
                    }
                }
            });

            // Handle page unload to save current timer state
            window.addEventListener('beforeunload', function() {
                if (timerInterval) {
                    const currentTime = $('#timer').text();
                    if (currentTime && currentTime !== '') {
                        // Parse current timer display and save remaining time
                        const [minutes, seconds] = currentTime.split(':').map(Number);
                        const remainingSeconds = minutes * 60 + seconds;
                        if (remainingSeconds > 0) {
                            const sessionKey = `otp_timer_${phoneNumber}`;
                            const adjustedTime = Date.now() - ((300 - remainingSeconds) * 1000);
                            sessionStorage.setItem(sessionKey, adjustedTime.toString());
                        }
                    }
                }
            });
        });
    </script>

    <style>
        .authentication-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .authentication-container {
            width: 100%;
            max-width: 450px;
        }

        .auth-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 2.5rem;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .auth-icon {
            display: flex;
            justify-content: center;
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .auth-title {
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.5rem;
        }

        .auth-subtitle {
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .form-group {
            position: relative;
        }

        .form-label {
            color: #495057;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .otp-container {
            text-align: center;
        }

        .otp-input-group {
            display: flex;
            gap: 0.75rem;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .otp-input {
            width: 3.5rem;
            height: 3.5rem;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            text-align: center;
            font-size: 1.25rem;
            font-weight: 600;
            color: #495057;
            background: #f8f9fa;
            transition: all 0.3s ease;
            outline: none;
        }

        .otp-input:focus {
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            transform: translateY(-2px);
        }

        .otp-input.filled {
            border-color: #28a745;
            background: white;
            color: #28a745;
        }

        .auth-submit-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 0.875rem 1.5rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .auth-submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        .auth-submit-btn:disabled {
            transform: none;
            opacity: 0.7;
        }

        .auth-info-section {
            margin-top: 2rem;
        }

        .info-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.25rem;
            border-left: 4px solid #667eea;
        }

        .info-header {
            color: #495057;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .info-text {
            color: #6c757d;
            font-size: 0.85rem;
            line-height: 1.5;
            margin: 0;
        }

        .timer-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.25rem;
            border-left: 4px solid #667eea;
        }

        .timer-header {
            color: #495057;
            font-size: 0.9rem;
            margin-bottom: 0.75rem;
        }

        .timer-content {
            text-align: center;
        }

        .timer-text {
            color: #6c757d;
            font-size: 0.85rem;
            display: block;
            margin-bottom: 0.5rem;
        }

        .timer-display {
            color: #dc3545;
            font-weight: 700;
            font-size: 1.1rem;
            font-family: 'Courier New', monospace;
        }

        .resend-btn {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }

        .resend-btn:hover:not(:disabled) {
            transform: translateY(-1px);
        }

        .back-link {
            margin-top: 1.5rem;
        }

        .back-link a {
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

        .back-link a:hover {
            color: #667eea !important;
        }

        /* Loading animation */
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .spin {
            animation: spin 1s linear infinite;
        }

        /* Responsive adjustments */
        @@media (max-width: 576px) {
            .authentication-wrapper {
                padding: 1rem;
            }
            
            .auth-card {
                padding: 2rem 1.5rem;
            }
            
            .icon-wrapper {
                width: 60px;
                height: 60px;
                font-size: 1.5rem;
            }
            
            .otp-input-group {
                gap: 0.5rem;
            }
            
            .otp-input {
                width: 3rem;
                height: 3rem;
                font-size: 1.1rem;
            }
        }
    </style>
} 